/* CSS Reset */

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
}

:focus {
	outline: 0;
}

/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section {
	display: block;
	zoom: 1;
}

body {
	font-family: Eurofurence, 'Avant Garde', 'Century Gothic', Helvetica, Arial, sans-serif;
	line-height: 1;
	font-size: 16px;
	overflow-x: hidden;
	cursor: default;
	background: #422607 url(<%= asset_path 'choco_bg.jpg' %>) top center fixed;
}

::-moz-selection {
	background-color: transparent !important;
}

ol, ul {
	list-style: none;
}

blockquote, q {
	quotes: none;
}

blockquote:before, blockquote:after,
q:before, q:after {
	content: '';
	content: none;
}

table {
	border-collapse: collapse;
	border-spacing: 0;
}

a {
	text-decoration: none;
}

button, input[type="reset"], input[type="button"], input[type="submit"] {
	line-height:normal !important;
}

-webkit-touch-callout: none;
-webkit-user-select: none;
-khtml-user-select: none;
-moz-user-select: none;
-ms-user-select: none;
-o-user-select: none;
user-select: none;


/* -----------GLOBAL STYLES----------- */

/* Header */

.fixed {
	position: fixed !important;
	top: 0 !important;
}

#wrapper {
	width:90%;
	max-width: 60em;
	min-width: 45em;
	height: auto;
	margin: 0 auto;
	overflow: hidden;
	position: relative;
}

#headerWrapper { /* required to avoid jumping */
	position: absolute;
	width: 20em;
	z-index: 8;
	margin-left: 1em;
}

	#header {
		position: fixed;
		top: 0;
		margin-top: 0.5em;
	}
	
	#header a {
		color: #fff;
		text-transform: uppercase;
	}

.navLink {
	display: block;
	width: 5.5em;
	height: 5.5em;
	padding: 0.25em;
	border: 1px solid #ccc;
	margin: 0 0.5em 0.5em 0;
	float: left;
	text-align: center;
	background: #fff;
}

	.navLink span {
		display: block;
		height: 100%;
		font-size: 0.825em;
		font-weight: bold;
		letter-spacing: 0.125em;
	}
	
	/* Links color */
	.aboutLink span {
		background-color: #000391;
	}
	.ritterLink span {
		background-color: #007bac;
		background-position: 0 left;
	}
	.eventsLink span {
		background-color: #ff6300;
	}
	.giftLink span {
		background-color: #d2a432;
	}

.giftLink, .ritterLink {
	margin-right: 0 !important;
}
.otherProductsLink {
	margin-right: 0 !important;
	clear: left;
}
.eventsLink {
	clear: left;
}

/* Aside forms */
	
#asideWrapper { /* required to avoid jumping */
	position: absolute;
	width: 1.5em;
	z-index: 10;
	right: 0;
	top: 0;
	height: 100%;
	margin-right: 1em;
}

	#aside {
		position: fixed;
		top: 0;
		margin-top: 0.5em;
		width: 15em;
	}

#buttonsContainer {
	width: 1.5em;
	display: block;
	float: left;
}

#buttonsContainer div {
	margin-bottom: 0.5em;
	position: relative;
}

.icon a {
	width: 1.5em;
	height: 1.5em;
	display: block;
	background-image: url(<%= asset_path 'aside_icons.png' %>);
	background-repeat: no-repeat;
	background-color: transparent;
}

	/* Icon Images */
	.cartIcon a {
		background-position: -0.5em -2.5em;
	}
	.cartIcon.active a, .cartIcon a:hover {
		background-position: -2.5em -2.5em;
	}
	.searchIcon a {
		background-position: -0.5em -4.5em;
	}
	.searchIcon.active a, .searchIcon a:hover {
		background-position: -2.5em -4.5em;
	}
	.suscriptionIcon a {
		background-position: -0.5em -6.5em;
	}
	.suscriptionIcon.active a, .suscriptionIcon a:hover {
		background-position: -2.5em -6.5em;
	}
	.contactIcon a {
		background-position: -0.5em -8.5em;
	}
	.contactIcon.active a, .contactIcon a:hover {
		background-position: -2.5em -8.5em;
	}

.asideButton {
	cursor: pointer;
	margin-bottom: 0.5em;
	width: 1.5em;
	height: 1.5em;
	background-image: url(<%= asset_path 'aside_icons.png' %>);
	background-repeat: no-repeat;
	background-color: transparent;
}

	.closeAside {
		display: none;
		background-position: -0.5em -0.5em;
	}
	.closeAside:hover {
		background-position: -2.5em -0.5em;
	}
		
	.downButton {
		display: block;
		background-position: -0.5em -12.5em;
	}
	.downButton:hover {
		display: block;
		background-position: -2.5em -12.5em;
	}

form {
