form label {
	display: block;
	clear: both;
}

.field {
	clear: both;
	display: block;
	margin-bottom: 0.5em;
}

form input, form textarea {
	display: block;
	padding: 0;
	margin: 0;
	border: 0 none;
	font-family: Eurofurence, 'Avant Garde', 'Century Gothic', Helvetica, Arial, sans-serif;
	font-size: 1em;
}

form .text {
	clear: both;
	height: 20px;
	border: 1px dashed #ccc;
	width: 10.875em;
}

	form .text:focus {
		background-image: url(<%= asset_path 'input_bg.png' %>);
	}
	
	#cartForm .text:focus {
		background-color: #ddf0fc;
	}
	#searchForm .text:focus {
		background-color: #f5e5ee;
	}
	#suscriptionForm .text:focus {
		background-color: #ffe1d9;
	}
	#contactForm .text:focus {
		background-color: #dbf9da;
	}
	
form .submit {
	clear: both;
	height: 22px;
	text-transform: uppercase;
	width: 100%;
	color: #fff;
	font-weight: bold;
	border-radius: 0.125em;
	border: 1px solid #999;
	cursor: pointer;
}

form h5 {
	display: block;
	float: left;
	font-size: 1.25em;
	margin-bottom: 0.5em;
}

	form h5 span {
		font-weight: bold;
		text-transform: uppercase;
	}

form textarea {
	height: 5em;
	min-height: 5em;
	max-height: 15em;
	width: 10.875em;
	min-width: 10.875em;
	max-width: 10.875em;
}

form .uncorrect {
	background-color: #fcedd3;
	background-image: url(<%= asset_path 'input_bg.png' %>);
}

#cartList li {
	clear: both;
	display: block;
	overflow: hidden;
	padding: 0.125em 0.5em;
}

	li.oddProduct {
		background: #ddd;
	}

li .productName {
	float: left;
	clear: left;
}

li .productQty {
	float: right;
	clear: right;
}

li .cartTotal {
	float: right;
	clear: both;
}

